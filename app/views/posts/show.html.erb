<!-- Page Content -->
	<div class="container">

		<div class="row">

			<div class="col-md-8">

				<!-- Blog Post -->

				<p id="notice"><%= notice %></p>

				<!-- Title -->
				<h1><%=@post.title%></h1>

				<!-- Author -->
				<p class="lead">
				by SilverFox
				</p>

				<hr>

				<!-- Date/Time -->
				<p><span class="glyphicon glyphicon-time"></span><%= @post.created_at.to_formatted_s(:long_ordinal) %></p>

				<!-- Preview Image -->
				<%= image_tag(@post.img_url, class: "img-responsive") %>

				<hr>

				<!-- Post Content -->
				<p class="lead"><%= simple_format(@post.content) %></p>
				<hr>
				<!-- Post Category -->
				<p class="well well-small">Category:
				<%= @post.category %>
				</p>

				<!-- Edit Link if admin signed in -->
				<% if admin_user_signed_in? %>
					<p><strong>Admin Actions: </strong>
						<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %> 
						<%= link_to 'Delete', "/posts/#{@post.id}", method: :delete, class: "btn btn-danger",confirm: "Are you sure?" %>
					</p>
				<% end %>

				<%= link_to 'Back', :back, class: "btn btn-default" %>
				<hr>

			
				<!-- Comments form -->
				<% if current_user %>
				<div class="well">
					<h4>Leave a Comment:</h4>
					<%= form_for([@post, @post.comments.build]) do |f| %>
					  <% if !@comment.nil? && @comment.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

					      <ul>
					      <% @comment.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>

					    <%= f.hidden_field :author, :value => current_user_name %>
					  <div class="field">
					    <%= f.label "#{current_user_name}'s comment:" %><br>
					    <%= f.text_area :body %>
					  </div>
					    <%= f.hidden_field :post_id, :value =>@post.id %>
					    <%= f.hidden_field :user_id, :value => current_user.id %>
					  <div class="actions">
					    <%= f.submit %>
					  </div>
					<% end %>
				</div>
				<% else %>
				<div class="well comment-buffer">
					<p class="sgn-com"><%= link_to("Sign in", "/users/sign_in") %> to leave a comment.</p>
				</div>
				<% end %>

				<!-- Posted Comments -->
				<!-- Comment -->
				<% if !@comments.nil? || @comments.count.zero?%>
					<% @comments.each do |comment| %>
						<div class="media"  id="comment-<%= comment.id %>">
							<a class="pull-left" href="#">
								<img class="media-object" src="<%= gravatar_url(User.find(comment.user_id).email) %>" alt="">
							</a>
									<div class="media-body">
										<h4 class="media-heading"><%= comment.author %>
										<small><%= comment.created_at.to_formatted_s(:long_ordinal) %></small>
										</h4>
										<p class="lead"><%= simple_format(comment.body) %></p>
									</div><!-- /.media-body -->
									<% if current_user && current_user.id == comment.user_id %>
										<%= link_to("<i class=\"glyphicon glyphicon-pencil\"></i> Edit".html_safe, "/posts/#{@post.id}/comments/#{comment.id}/edit", class: "btn btn-default") %>
										<a class="btn btn-default del-btn" data-confirm "Are you sure?" href="/comments/<%=comment.id%>"><i class="glyphicon glyphicon-exclamation-sign"></i> Delete</a>
									<% end %>
									<% if admin_user_signed_in? %>
										<%= link_to("Delete", "/comments/#{comment.id}", method: :delete, class: "btn btn-danger del-btn",data:{ confirm: "Are you sure?"}) %>
									<% end %>
							<hr>
						</div><!-- /.media -->
					<% end %>
				<% else %> 
				<h4>No comments yet...</h4>
				<% end %>
			</div><!--/.col-md-8 -->	

			<!-- Blog Sidebar Widgets Column -->
			<div class="col-md-4">
				
				<!-- Blog Search Well -->
				<div class="well">
            <h4>Blog Search</h4>
            <div class="input-group search-group">
              <%= search_form_for @search do |f| %>
                <%= f.text_field :title_or_content_cont,  placeholder: "Search Posts" %>
                <%= f.submit "Search", class: "search-button" %>
              <% end %>
            </div>
            <!-- /.input-group -->
        </div>

				<!-- Blog Categories Well -->
	      <div class="well">
	          <h4>Blog Categories</h4>
	          <div class="row">
	              <div class="col-lg-6">
	                  <ul class="list-unstyled">
	                    <li><%= link_to "All", posts_path(category: "All") %>
	                    </li>
	                    <% @categories[0..2].each do |cat| %>
	                      <li><%= link_to "#{cat}", posts_path(category: cat) %>
	                      </li>
	                    <% end %>  
	                  </ul>
	              </div> <!-- /.col-lg-6 -->
	              <!-- /.col-lg-6 -->
	              <div class="col-lg-6">
	                  <ul class="list-unstyled">
	                    <% if @columns %>
	                      <% @categories.from(@split_at).each do |cat| %>
	                      <li><%= link_to "#{cat}", posts_path(category: cat) %>
	                      </li>
	                      <% end %>
	                    <% end %>  
	                  </ul>
	              </div> <!-- /.col-lg-6 -->
	              <!-- /.col-lg-6 -->
	          </div>
	          <!-- /.row -->
	      </div>
	      <!-- /.well -->

	      <!-- Side Widget Well -->
	      <div class="well">
	          <h4>Side Widget Well</h4>
	          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
	      </div>

			</div><!--/.col-md-4 -->

    </div>
    <!-- /.row -->

    <hr>

   </div>
   <!-- /.container -->  






