<div class="container">			
	<div class="row">
		<div class="col-md-8">
			<% if admin_user_signed_in? %>
				<h1>New Post</h1>

				<%= render 'form' %>
			<% else %>
				<p class="forbidden"><%= @auth_error %></p>
				<p class="forbidden">You are not authorized to view this page. </p>

			<% end %>

			<%= link_to 'Back', posts_path %>
		</div><!-- /.col-md-8 -->
	</div><!-- /.row -->
</div><!-- /.container -->